<!-- Home page / Sign in Page -->
<div class="header">
  <h2>Login</h2>
</div>

<% if @error_message %>
  <p class="error-message"><%= @error_message %></p>
<% end %>

<div class="container">
  <%= form_with url: create_session_users_path, method: :post, local: true do |form| %> 
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, name: "user[email]", placeholder: "Enter your email", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, name: "user[password]", placeholder: "Enter your password", required: true %>
    </div>

    <div class="form-group">
      <%= form.submit "Sign In", class: "sign-in-btn" %>
    </div>
  <% end %>

  <div class="signup-link">
    <p>Don't have an account? <%= link_to 'Sign up', new_user_path %></p>
  </div>
</div>
</div>